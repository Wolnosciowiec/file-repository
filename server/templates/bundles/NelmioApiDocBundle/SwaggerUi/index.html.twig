
{% extends "@!NelmioApiDoc/SwaggerUi/index.html.twig" %}

{% block swagger_data %}
    {# json_encode(65) is for JSON_UNESCAPED_SLASHES|JSON_HEX_TAG to avoid JS XSS #}
    <script id="swagger-data" type="application/json">{{ get_swagger_data()|json_encode(65)|raw }}</script>
{% endblock swagger_data %}

{% block stylesheets %}
    {%  set base_color = "#f34a4a" %}

    {{ parent() }}
    <style>
        body, .swagger-ui, .info table, .info p {
            color: black !important;
        }

        header:before {
            background-color: {{ base_color }};
        }

        header #logo img {
            background-color: transparent;
        }

        #swagger-ui.api-platform .info .title {
            color: {{ base_color }};
        }

        .swagger-ui .btn.authorize {
            color: {{ base_color }};
            border-color: {{ base_color }};
        }

        .swagger-ui .btn.authorize svg {
            fill: black;
        }
    </style>
{% endblock %}

{% block header %}
    <a id="logo" href="https://github.com/riotkit-org"><img src="{{ asset('images/riotkit-logo.png') }}" target="_blank" alt="RiotKit"></a>
{% endblock %}

